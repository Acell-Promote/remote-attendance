{
  "name": "remote-attendance",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "23.10.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --fix \"{app,lib}/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"{app,lib}/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "format:check": "prettier --check \"{app,lib}/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "prepare": "husky",
    "seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/seed.ts",
    "postinstall": "prisma generate",
    "heroku-postbuild": "pnpm prisma generate && pnpm build"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "geist": "^1.3.1",
    "next": "15.2.3",
    "next-auth": "^4.24.11",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.2.3",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.5.0",
    "tailwindcss": "^4.0.17"
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "bcrypt",
      "esbuild",
      "prisma",
      "sharp"
    ]
  },
  "lint-staged": {
    "**/*": "prettier . --write --ignore-unknown"
  },
  "prisma": {
    "seed": "ts-node -P scripts/tsconfig.json scripts/seed.ts"
  }
}
